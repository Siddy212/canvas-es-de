         <gamelistPosFlipped>0.058291666666667 0.105566666666667</gamelistPosFlipped>
         <itemsBeforeCenter>3.5</itemsBeforeCenter>
         <itemsAfterCenter>3.5</itemsAfterCenter>   
         <itemSize>0.23 0.175</itemSize>
      </variables>
   </fontSize>
   <fontSize name="medium">
