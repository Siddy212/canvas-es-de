            <pos>0.2328125 ${descriptionPos}</pos>
            <size>0.44 ${descriptionHeight}</size>
            <fontSize>${descriptionFontSize}</fontSize>
            <lineSpacing>${descriptionLineSpacing}</lineSpacing>
            <visible>${metadataMin}</visible>
