      <view name="gamelist">
         <badges name="badges">
            <lines>6</lines>
            <itemsPerLine>${badgeitemsline}</itemsPerLine>
            <pos>${badgepos}</pos>
            <size>${badgesize}</size>
            <itemMargin>0.006 0.01</itemMargin>
